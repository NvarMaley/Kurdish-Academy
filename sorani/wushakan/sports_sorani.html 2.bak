        // Fonction pour charger les traductions dans le tableau
        function loadTranslations() {
            const container = document.getElementById('translationsContainer');
            container.innerHTML = '';
            
            sportsData.forEach(item => {
                const row = document.createElement('div');
                row.className = 'translation-row';
                row.innerHTML = `
                    <div class="english-cell">${item.english}</div>
                    <div class="sorani-cell">${item.sorani}</div>
                `;
                container.appendChild(row);
            });
        }

        // Fonction de recherche
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('.translation-row');
                
                rows.forEach(row => {
                    const englishText = row.querySelector('.english-cell').textContent.toLowerCase();
                    const soraniText = row.querySelector('.sorani-cell').textContent.toLowerCase();
                    
                    if (englishText.includes(searchTerm) || soraniText.includes(searchTerm)) {
                        row.style.display = 'flex';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // Variables pour les flashcards
        let currentCardIndex = 0;
        let isFlipped = false;
        let shuffledCards = [...sportsData];
        let completedCards = 0;

        // Fonction pour m√©langer les cartes
        function shuffleArray(array) {
            const shuffled = [...array];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        // Fonction pour changer de mode
        function showMode(mode) {
            const tableMode = document.getElementById('tableMode');
            const flashcardsMode = document.getElementById('flashcardsMode');
            const quizMode = document.getElementById('quizMode');
            const searchContainer = document.querySelector('.search-container');
            const modeButtons = document.querySelectorAll('.mode-btn');
            
            // R√©initialiser les boutons
            modeButtons.forEach(btn => btn.classList.remove('active'));
            
            // Cacher tous les modes
            tableMode.style.display = 'none';
            flashcardsMode.style.display = 'none';
            quizMode.style.display = 'none';
            
            if (mode === 'table') {
                tableMode.style.display = 'block';
                searchContainer.style.display = 'block';
                document.querySelector('.mode-btn[onclick="showMode(\'table\')"]').classList.add('active');
            } else if (mode === 'flashcards') {
                flashcardsMode.style.display = 'block';
                searchContainer.style.display = 'none';
                document.querySelector('.mode-btn[onclick="showMode(\'flashcards\')"]').classList.add('active');
                initializeFlashcards();
            } else if (mode === 'quiz') {
                quizMode.style.display = 'block';
                searchContainer.style.display = 'none';
                document.querySelector('.mode-btn[onclick="showMode(\'quiz\')"]').classList.add('active');
                initializeQuiz();
            }
        }

        // Initialiser les flashcards
        function initializeFlashcards() {
            currentCardIndex = 0;
            isFlipped = false;
            document.getElementById('completionMessage').style.display = 'none';
            document.querySelector('.flashcard').style.display = 'block';
            document.querySelector('.flashcard-controls').style.display = 'flex';
            updateCard();
            updateProgress();
            updateButtons();
        }

        // Mettre √† jour la carte actuelle
        function updateCard() {
            const currentCard = shuffledCards[currentCardIndex];
            document.getElementById('frontText').textContent = currentCard.english;
            document.getElementById('backText').textContent = currentCard.sorani;
            
            // R√©initialiser la rotation
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.remove('flipped');
            isFlipped = false;
        }

        // Retourner la carte
        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
            isFlipped = !isFlipped;
        }

        // Carte pr√©c√©dente
        function previousCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateCard();
                updateProgress();
                updateButtons();
            }
        }

        // Carte suivante
        function nextCard() {
            if (currentCardIndex < shuffledCards.length - 1) {
                currentCardIndex++;
                updateCard();
                updateProgress();
                updateButtons();
            } else {
                // Fin des cartes
                showCompletionMessage();
            }
        }

        // Mettre √† jour le compteur
        function updateProgress() {
            const counter = document.getElementById('cardCounter');
            counter.textContent = `${currentCardIndex + 1} / ${shuffledCards.length}`;
        }

        // Mettre √† jour les boutons
        function updateButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            prevBtn.disabled = currentCardIndex === 0;
            
            if (currentCardIndex === shuffledCards.length - 1) {
                nextBtn.textContent = 'Finish';
            } else {
                nextBtn.textContent = 'Next ‚Üí';
            }
        }

        // Afficher le message de fin
        function showCompletionMessage() {
            document.querySelector('.flashcard').style.display = 'none';
            document.querySelector('.flashcard-controls').style.display = 'none';
            document.getElementById('completionMessage').style.display = 'block';
        }

        // Recommencer avec ordre al√©atoire
        function restartFlashcards() {
            shuffledCards = shuffleArray(sportsData);
            initializeFlashcards();
        }

        // Variables pour le quiz
        let currentQuizIndex = 0;
        let quizScore = 0;
        let shuffledQuizData = shuffleArray(sportsData);
        let quizCards = shuffledQuizData;
        let totalQuizQuestions = 0;

        // Initialiser le quiz
        function initializeQuiz() {
            currentQuizIndex = 0;
            quizScore = 0;
            totalQuizQuestions = 0;
            shuffledQuizData = shuffleArray(sportsData);
            quizCards = shuffledQuizData;
            
            document.getElementById('quizCompletion').style.display = 'none';
            document.querySelector('.quiz-card').style.display = 'block';
            document.getElementById('quizFeedback').style.display = 'none';
            
            updateQuizQuestion();
            updateQuizProgress();
        }

        // Mettre √† jour la question du quiz
        function updateQuizQuestion() {
            const currentQuestion = quizCards[currentQuizIndex];
            document.getElementById('quizEnglishWord').textContent = currentQuestion.english;
            document.getElementById('quizInput').value = '';
            document.getElementById('quizInput').focus();
            document.getElementById('submitBtn').disabled = false;
            document.getElementById('quizFeedback').style.display = 'none';
        }

        // V√©rifier la r√©ponse
        function checkAnswer() {
            const userAnswer = document.getElementById('quizInput').value.trim();
            const correctAnswer = quizCards[currentQuizIndex].sorani;
            
            totalQuizQuestions++;
            
            // Normaliser les r√©ponses pour la comparaison
            const normalizedUserAnswer = userAnswer.toLowerCase().replace(/\s+/g, ' ');
            const normalizedCorrectAnswer = correctAnswer.toLowerCase().replace(/\s+/g, ' ');
            
            const isCorrect = normalizedUserAnswer === normalizedCorrectAnswer;
            
            if (isCorrect) {
                quizScore++;
                showFeedback(true, correctAnswer);
            } else {
                showFeedback(false, correctAnswer, userAnswer);
            }
            
            updateQuizProgress();
            document.getElementById('submitBtn').disabled = true;
        }

        // Afficher le feedback
        function showFeedback(isCorrect, correctAnswer, userAnswer = '') {
            const feedback = document.getElementById('quizFeedback');
            const feedbackIcon = document.getElementById('feedbackIcon');
            const feedbackText = document.getElementById('feedbackText');
            const correctAnswerDiv = document.getElementById('correctAnswer');
            
            feedback.style.display = 'block';
            feedback.className = 'quiz-feedback ' + (isCorrect ? 'correct' : 'incorrect');
            
            if (isCorrect) {
                feedbackIcon.textContent = '‚úÖ';
                feedbackText.textContent = 'Correct!';
                feedbackText.className = 'feedback-text correct';
                correctAnswerDiv.style.display = 'none';
            } else {
                feedbackIcon.textContent = '‚ùå';
                feedbackText.textContent = 'Incorrect';
                feedbackText.className = 'feedback-text incorrect';
                correctAnswerDiv.innerHTML = `Correct answer: <strong>${correctAnswer}</strong>`;
                correctAnswerDiv.style.display = 'block';
            }
        }

        // Question suivante
        function nextQuestion() {
            if (currentQuizIndex < quizCards.length - 1) {
                currentQuizIndex++;
                updateQuizQuestion();
            } else {
                showQuizCompletion();
            }
        }

        // Mettre √† jour la progression du quiz
        function updateQuizProgress() {
            const counter = document.getElementById('quizCounter');
            const score = document.getElementById('quizScore');
            const progressFill = document.getElementById('progressFill');
            
            counter.textContent = `${currentQuizIndex + 1} / ${quizCards.length}`;
            score.textContent = `Score: ${quizScore}/${totalQuizQuestions}`;
            
            const progressPercent = ((currentQuizIndex + 1) / quizCards.length) * 100;
            progressFill.style.width = progressPercent + '%';
        }

        // Afficher la completion du quiz
        function showQuizCompletion() {
            document.querySelector('.quiz-card').style.display = 'none';
            document.getElementById('quizCompletion').style.display = 'block';
            
            const percentage = Math.round((quizScore / totalQuizQuestions) * 100);
            document.getElementById('finalScore').textContent = `Your Score: ${quizScore}/${totalQuizQuestions} (${percentage}%)`;
            
            let message = '';
            if (percentage >= 90) {
                message = 'üèÜ Excellent! You\'re a Kurdish master!';
            } else if (percentage >= 75) {
                message = 'üéâ Great job! Keep up the good work!';
            } else if (percentage >= 60) {
                message = 'üëç Good effort! Practice makes perfect!';
            } else {
                message = 'üí™ Keep practicing! You\'ll get better!';
            }
            
            document.getElementById('scoreMessage').textContent = message;
        }

        // Recommencer le quiz
        function restartQuiz() {
            shuffledQuizData = shuffleArray(greetingsData);
            quizCards = shuffledQuizData;
            initializeQuiz();
        }

        // Support pour la touche Entr√©e dans le quiz
        document.addEventListener('DOMContentLoaded', function() {
            loadTranslations();
            setupSearch();
            
            // Ajouter support pour la touche Entr√©e
            document.getElementById('quizInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !document.getElementById('submitBtn').disabled) {
                    checkAnswer();
                }
            });
        });
    </script>
