        <script>
            let currentAudio = null;
            let currentProgressBar = null;
            let progressInterval = null;
            
            function playAudio(audioFile, buttonElement) {
                // ArrÃªter l'audio prÃ©cÃ©dent s'il y en a un
                if (currentAudio) {
                    currentAudio.pause();
                    currentAudio.currentTime = 0;
                    clearInterval(progressInterval);
                    if (currentProgressBar) {
                        currentProgressBar.style.width = '0%';
                    }
                }
                
                // Trouver la barre de progression associÃ©e
                const audioControls = buttonElement.parentElement;
                const progressBar = audioControls.querySelector('.audio-progress-bar');
                currentProgressBar = progressBar;
                
                // CrÃ©er et jouer le nouveau audio
                currentAudio = new Audio(audioFile);
                
                currentAudio.addEventListener('loadedmetadata', function() {
                    // DÃ©marrer la mise Ã  jour de la progression
                    progressInterval = setInterval(function() {
                        if (currentAudio && !currentAudio.paused) {
                            const progress = (currentAudio.currentTime / currentAudio.duration) * 100;
                            progressBar.style.width = progress + '%';
                        }
                    }, 100);
                });
                
                currentAudio.addEventListener('ended', function() {
                    clearInterval(progressInterval);
                    progressBar.style.width = '0%';
                });
                
                currentAudio.play().catch(function(error) {
                    console.log('Erreur lors de la lecture audio:', error);
                });
            }
            
            function seekAudio(event, progressElement) {
                if (!currentAudio) return;
                
                const rect = progressElement.getBoundingClientRect();
                const clickX = event.clientX - rect.left;
                const width = rect.width;
                const percentage = clickX / width;
                
                if (currentAudio.duration) {
                    currentAudio.currentTime = percentage * currentAudio.duration;
                    const progressBar = progressElement.querySelector('.audio-progress-bar');
                    progressBar.style.width = (percentage * 100) + '%';
                }
            }
        </script>
