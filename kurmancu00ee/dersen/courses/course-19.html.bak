                    feedback.innerHTML = 'âŒ Not quite. Say "Min rezervasyonek heye" to say you have a reservation.';
                } else if (scenario === 2) {
                    feedback.innerHTML = 'âŒ Not quite. Say "NavÃª min ... e" to give your name.';
                } else if (scenario === 3) {
                    feedback.innerHTML = 'âŒ Not quite. Ask "WiFi heye?" to ask if there\'s WiFi.';
                } else {
                    feedback.innerHTML = 'âŒ Not quite. Ask "Saet Ã§end ez divÃª derkevim?" for check-out time.';
                }
                feedback.style.color = '#d32f2f';
            }
            
            // Disable all buttons in this scenario
            buttons.forEach(btn => btn.style.pointerEvents = 'none');
            
            document.getElementById('checkin-correct').textContent = checkinCorrect;
        }

        // Matching exercise
        let selectedKurdish = null;
        let selectedEnglish = null;
        let matches = [];
        
        const correctMatches = {
            'rezervasyon': 'reservation',
            'oda': 'room',
            'sev': 'night',
            'pasaport': 'passport',
            'mifteya': 'key',
            'mewan': 'guest'
        };

        function selectWord(button) {
            const isKurdish = button.classList.contains('kurdish');
            const word = button.getAttribute('data-word');
            
            // Check if already matched
            const alreadyMatched = matches.some(m => m.kurdish === word || m.english === word);
            if (alreadyMatched) return;
            
            if (isKurdish) {
                // Deselect previous Kurdish selection
                if (selectedKurdish) {
                    selectedKurdish.style.background = 'white';
                    selectedKurdish.style.borderColor = '#ff9800';
                }
                selectedKurdish = button;
                button.style.background = '#fff3e0';
                button.style.borderColor = '#e65100';
            } else {
                // Deselect previous English selection
                if (selectedEnglish) {
                    selectedEnglish.style.background = 'white';
                    selectedEnglish.style.borderColor = '#ff9800';
                }
                selectedEnglish = button;
                button.style.background = '#fff3e0';
                button.style.borderColor = '#e65100';
            }
            
            // If both are selected, create a match
            if (selectedKurdish && selectedEnglish) {
                const kurdishWord = selectedKurdish.getAttribute('data-word');
                const englishWord = selectedEnglish.getAttribute('data-word');
                
                matches.push({
                    kurdish: kurdishWord,
                    english: englishWord
                });
                
                // Mark as matched with gray background
                selectedKurdish.style.background = '#e0e0e0';
                selectedKurdish.style.borderColor = '#9e9e9e';
                selectedKurdish.style.pointerEvents = 'none';
                
                selectedEnglish.style.background = '#e0e0e0';
                selectedEnglish.style.borderColor = '#9e9e9e';
                selectedEnglish.style.pointerEvents = 'none';
                
                // Reset selections
                selectedKurdish = null;
                selectedEnglish = null;
            }
        }

        function checkMatching() {
            if (matches.length !== 6) {
                document.getElementById('match-score').innerHTML = 'âš ï¸ Please match all words before checking!';
                document.getElementById('match-score').style.color = '#f57f17';
                return;
            }
            
            let correct = 0;
            const allButtons = document.querySelectorAll('.match-btn');
            
            matches.forEach(match => {
                const isCorrect = correctMatches[match.kurdish] === match.english;
                
                // Find the buttons
                const kurdishBtn = document.querySelector(`.kurdish[data-word="${match.kurdish}"]`);
                const englishBtn = document.querySelector(`.english[data-word="${match.english}"]`);
                
                if (isCorrect) {
                    correct++;
                    kurdishBtn.style.background = '#c8e6c9';
                    kurdishBtn.style.borderColor = '#4caf50';
                    englishBtn.style.background = '#c8e6c9';
                    englishBtn.style.borderColor = '#4caf50';
                } else {
                    kurdishBtn.style.background = '#ffcdd2';
                    kurdishBtn.style.borderColor = '#f44336';
                    englishBtn.style.background = '#ffcdd2';
                    englishBtn.style.borderColor = '#f44336';
                }
            });
            
            const scoreDiv = document.getElementById('match-score');
            scoreDiv.textContent = `Score: ${correct} / 6`;
            scoreDiv.style.color = correct === 6 ? '#2e7d32' : '#f57f17';
            
            if (correct === 6) {
                scoreDiv.textContent += ' ğŸ‰ Perfect!';
            }
        }

        function resetMatching() {
            matches = [];
            selectedKurdish = null;
            selectedEnglish = null;
            
            const allButtons = document.querySelectorAll('.match-btn');
            allButtons.forEach(btn => {
                btn.style.background = 'white';
                btn.style.borderColor = '#ff9800';
                btn.style.pointerEvents = 'auto';
            });
            
            document.getElementById('match-score').textContent = '';
        }
    </script>
</body>
</html>
