        // Writing validation
        function checkWriting() {
            const text = document.getElementById('write-text').value.trim();
            const feedback = document.getElementById('write-feedback');
            
            if (text.length < 150) {
                feedback.innerHTML = '‚ùå Please write at least 8-10 sentences (longer text).';
                feedback.style.color = '#d32f2f';
                return;
            }

            const hasPresent = /dixwazim|dikim|di√ßim|dib√Ænim/i.test(text);
            const hasPast = /rab√ªm|√ß√ªm|xwarim|d√Ætim|kir/i.test(text);
            const hasTime = /saet|sib√™|√™var√™|n√Ævro/i.test(text);
            
            if (hasPresent && hasPast && hasTime) {
                feedback.innerHTML = '‚úÖ Excellent! You used present, past tense, and time expressions!';
                feedback.style.color = '#2e7d32';
            } else if ((hasPresent && hasTime) || (hasPast && hasTime)) {
                feedback.innerHTML = 'üëç Good! Try to include both present and past tense.';
                feedback.style.color = '#f57f17';
            } else {
                feedback.innerHTML = 'üí™ Keep practicing! Include time expressions and varied verb tenses.';
                feedback.style.color = '#f57f17';
            }
        }

        // Role-play validation
        let roleScores = {1: 0, 2: 0, 3: 0};
        let roleAnswered = {1: [false, false, false], 2: [false, false, false], 3: [false, false, false]};

        function checkRole(roleplay, step, answer) {
            const key = `${roleplay}-${step}`;
            if (roleAnswered[roleplay][step - 1]) return;
            
            const feedback = document.getElementById(`role-${key}-feedback`);
            const correctAnswers = {
                '1-1': 'a', '1-2': 'a', '1-3': 'a',
                '2-1': 'a', '2-2': 'a', '2-3': 'a',
                '3-1': 'a', '3-2': 'a', '3-3': 'a'
            };
            
            roleAnswered[roleplay][step - 1] = true;
            const buttons = event.target.parentElement.querySelectorAll('.role-btn');
            
            if (answer === correctAnswers[key]) {
                roleScores[roleplay]++;
                event.target.classList.add('correct');
                feedback.innerHTML = '‚úÖ Perfect!';
                feedback.style.color = '#2e7d32';
            } else {
                event.target.classList.add('incorrect');
                buttons.forEach((btn, index) => {
                    if (String.fromCharCode(97 + index) === correctAnswers[key]) {
                        btn.classList.add('correct');
                    }
                });
                feedback.innerHTML = '‚ùå Try again next time!';
                feedback.style.color = '#d32f2f';
            }
            
            buttons.forEach(btn => btn.style.pointerEvents = 'none');
            document.getElementById(`role-${roleplay}-score`).textContent = roleScores[roleplay];
            
            const total = roleScores[1] + roleScores[2] + roleScores[3];
            document.getElementById('total-roleplay-score').textContent = total;
        }

