            '√™var': 'evening'
        };
        let selectedWordC11 = null;
        let selectedTransC11 = null;
        let matchedPairsC11 = 0;

        function selectWordC11(word) {
            if (document.querySelector(`[data-word="${word}"]`).classList.contains('matched')) return;
            document.querySelectorAll('.match-btn-c11').forEach(btn => {
                if (!btn.classList.contains('matched')) {
                    btn.style.background = 'white';
                }
            });
            document.querySelector(`[data-word="${word}"]`).style.background = '#fff9c4';
            selectedWordC11 = word;
            checkMatchC11();
        }

        function selectTransC11(trans) {
            if (document.querySelector(`[data-trans="${trans}"]`).classList.contains('matched')) return;
            document.querySelectorAll('.match-trans-c11').forEach(btn => {
                if (!btn.classList.contains('matched')) {
                    btn.style.background = 'white';
                }
            });
            document.querySelector(`[data-trans="${trans}"]`).style.background = '#fff9c4';
            selectedTransC11 = trans;
            checkMatchC11();
        }

        function checkMatchC11() {
            if (selectedWordC11 && selectedTransC11) {
                if (vocabPairsC11[selectedWordC11] === selectedTransC11) {
                    document.querySelector(`[data-word="${selectedWordC11}"]`).style.background = '#c8e6c9';
                    document.querySelector(`[data-trans="${selectedTransC11}"]`).style.background = '#c8e6c9';
                    document.querySelector(`[data-word="${selectedWordC11}"]`).classList.add('matched');
                    document.querySelector(`[data-trans="${selectedTransC11}"]`).classList.add('matched');
                    matchedPairsC11++;
                    if (matchedPairsC11 === 18) {
                        document.getElementById('vocab-match-feedback-c11').innerHTML = 'üéâ Perfect! All 18 pairs matched!';
                        document.getElementById('vocab-match-feedback-c11').style.color = '#2e7d32';
                    } else {
                        document.getElementById('vocab-match-feedback-c11').innerHTML = `‚úÖ ${matchedPairsC11} / 18 matched`;
                        document.getElementById('vocab-match-feedback-c11').style.color = '#f9a825';
                    }
                } else {
                    document.querySelector(`[data-word="${selectedWordC11}"]`).style.background = '#ffcdd2';
                    document.querySelector(`[data-trans="${selectedTransC11}"]`).style.background = '#ffcdd2';
                    setTimeout(() => {
                        document.querySelector(`[data-word="${selectedWordC11}"]`).style.background = 'white';
                        document.querySelector(`[data-trans="${selectedTransC11}"]`).style.background = 'white';
                    }, 1000);
                }
                selectedWordC11 = null;
                selectedTransC11 = null;
            }
        }

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function resetVocabC11() {
            selectedWordC11 = null;
            selectedTransC11 = null;
            matchedPairsC11 = 0;
            document.getElementById('vocab-match-feedback-c11').innerHTML = '';
            
            const wordsContainer = document.querySelector('.match-btn-c11').parentElement;
            const transContainer = document.querySelector('.match-trans-c11').parentElement;
            
            const wordButtons = Array.from(document.querySelectorAll('.match-btn-c11'));
            const transButtons = Array.from(document.querySelectorAll('.match-trans-c11'));
            
            wordButtons.forEach(btn => {
                btn.style.background = 'white';
                btn.classList.remove('matched');
            });
            transButtons.forEach(btn => {
                btn.style.background = 'white';
                btn.classList.remove('matched');
            });
            
            shuffleArray(wordButtons);
            shuffleArray(transButtons);
            
            wordsContainer.innerHTML = '';
            transContainer.innerHTML = '';
            
            wordButtons.forEach(btn => wordsContainer.appendChild(btn));
            transButtons.forEach(btn => transContainer.appendChild(btn));
        }
