    <script>
        // Listening comprehension validation
        function checkListening() {
            let correct = 0;
            const total = 3;

            // Q1: What does Person B have?
            const q1 = document.getElementById('listen-q1').value.toLowerCase().trim();
            const q1Feedback = document.getElementById('listen-q1-feedback');
            if (q1.includes('pen') || q1.includes('qelem')) {
                correct++;
                q1Feedback.innerHTML = '‚úÖ Correct! Person B has a pen (qelem).';
                q1Feedback.style.color = '#2e7d32';
            } else {
                q1Feedback.innerHTML = '‚ùå Wrong. Correct answer: <strong>A pen</strong>';
                q1Feedback.style.color = '#d32f2f';
            }

            // Q2: What is paqij?
            const q2 = document.getElementById('listen-q2').value.toLowerCase().trim();
            const q2Feedback = document.getElementById('listen-q2-feedback');
            if (q2.includes('eraser')) {
                correct++;
                q2Feedback.innerHTML = '‚úÖ Correct! Paqij means eraser.';
                q2Feedback.style.color = '#2e7d32';
            } else {
                q2Feedback.innerHTML = '‚ùå Wrong. Correct answer: <strong>Eraser</strong>';
                q2Feedback.style.color = '#d32f2f';
            }

            // Q3: Do you have a pen?
            const q3 = document.getElementById('listen-q3').value.toLowerCase().trim();
            const q3Feedback = document.getElementById('listen-q3-feedback');
            if (q3.includes('li te qelem heye') || (q3.includes('qelem') && q3.includes('heye'))) {
                correct++;
                q3Feedback.innerHTML = '‚úÖ Correct! Li te qelem heye?';
                q3Feedback.style.color = '#2e7d32';
            } else {
                q3Feedback.innerHTML = '‚ùå Wrong. Correct answer: <strong>Li te qelem heye?</strong>';
                q3Feedback.style.color = '#d32f2f';
            }

            const scoreDiv = document.getElementById('listen-score');
            scoreDiv.textContent = `Score: ${correct} / ${total}`;
            scoreDiv.style.color = correct === total ? '#2e7d32' : '#f57f17';
        }

        // Reading comprehension validation
        function checkReading() {
            let correct = 0;
            const total = 2;

            // Q1: Where are the books?
            const q1 = document.getElementById('read-q1').value.toLowerCase().trim();
            const q1Feedback = document.getElementById('read-q1-feedback');
            if (q1.includes('li ser mas√™') || (q1.includes('mas√™') && q1.includes('ser'))) {
                correct++;
                q1Feedback.innerHTML = '‚úÖ Correct! Li ser mas√™.';
                q1Feedback.style.color = '#2e7d32';
            } else {
                q1Feedback.innerHTML = '‚ùå Wrong. Correct answer: <strong>Li ser mas√™</strong>';
                q1Feedback.style.color = '#d32f2f';
            }

            // Q2: What's in the bag?
            const q2 = document.getElementById('read-q2').value.toLowerCase().trim();
            const q2Feedback = document.getElementById('read-q2-feedback');
            if ((q2.includes('p√™n√ªs') || q2.includes('penus')) && 
                (q2.includes('paqij')) && 
                (q2.includes('kevir'))) {
                correct++;
                q2Feedback.innerHTML = '‚úÖ Correct! P√™n√ªs, paqij √ª kevir.';
                q2Feedback.style.color = '#2e7d32';
            } else {
                q2Feedback.innerHTML = '‚ùå Wrong. Correct answer: <strong>P√™n√ªs, paqij √ª kevir</strong>';
                q2Feedback.style.color = '#d32f2f';
            }

            const scoreDiv = document.getElementById('read-score');
            scoreDiv.textContent = `Score: ${correct} / ${total}`;
            scoreDiv.style.color = correct === total ? '#2e7d32' : '#f57f17';
        }

        // Writing validation
        function checkWriting() {
            const inventory = document.getElementById('write-inventory').value.trim();
            const feedback = document.getElementById('write-feedback');
            
            if (inventory.length < 20) {
                feedback.innerHTML = '‚ùå Please write at least 4-5 sentences.';
                feedback.style.color = '#d32f2f';
                return;
            }

            const lines = inventory.split('\n').filter(line => line.trim().length > 0);
            
            if (lines.length < 3) {
                feedback.innerHTML = '‚ùå Please write at least 4 sentences.';
                feedback.style.color = '#d32f2f';
                return;
            }

            const hasObject = /p√Ærtuk|defter|qelem|p√™n√ªs|paqij|kevir|√ßente/i.test(inventory);
            const hasHeye = /heye|tune/i.test(inventory);
            
            if (hasObject && hasHeye) {
                feedback.innerHTML = '‚úÖ Great inventory! You described your bag well!';
                feedback.style.color = '#2e7d32';
            } else if (hasObject || hasHeye) {
                feedback.innerHTML = 'üëç Good effort! Try to use more school objects and "heye/tune".';
                feedback.style.color = '#f57f17';
            } else {
                feedback.innerHTML = 'üí™ Keep practicing! Remember to include school objects and "heye/tune".';
                feedback.style.color = '#f57f17';
            }
        }

        // Verb matching exercise (Section 7)
        const verbMatchesC6 = {
            'xwendin': 'read',
            'nivisin': 'write',
            'peyivin': 'speak',
            'ferbun': 'learn',
            'zanin': 'know',
            'vekirin': 'open'
        };

        let selectedVerbC6 = null;
        let selectedTransC6 = null;
        let matchedPairsC6 = 0;

        function selectVerbC6(verb) {
            if (document.querySelector(`[data-verb="${verb}"]`).classList.contains('matched')) return;
            
            document.querySelectorAll('.match-verb-btn-c6').forEach(btn => btn.classList.remove('selected'));
            document.querySelector(`[data-verb="${verb}"]`).classList.add('selected');
            selectedVerbC6 = verb;
            
            if (selectedTransC6) {
                checkVerbMatchC6();
            }
        }

        function selectTransC6(trans) {
            if (document.querySelector(`[data-trans="${trans}"]`).classList.contains('matched')) return;
            
            document.querySelectorAll('.match-trans-btn-c6').forEach(btn => btn.classList.remove('selected'));
            document.querySelector(`[data-trans="${trans}"]`).classList.add('selected');
            selectedTransC6 = trans;
            
            if (selectedVerbC6) {
                checkVerbMatchC6();
            }
        }

        function checkVerbMatchC6() {
            const feedback = document.getElementById('verb-match-feedback-c6');
            
            if (verbMatchesC6[selectedVerbC6] === selectedTransC6) {
                document.querySelector(`[data-verb="${selectedVerbC6}"]`).classList.add('matched');
                document.querySelector(`[data-verb="${selectedVerbC6}"]`).classList.remove('selected');
                document.querySelector(`[data-trans="${selectedTransC6}"]`).classList.add('matched');
                document.querySelector(`[data-trans="${selectedTransC6}"]`).classList.remove('selected');
                matchedPairsC6++;
                
                feedback.innerHTML = '‚úÖ Correct match!';
                feedback.style.color = '#2e7d32';
                
                if (matchedPairsC6 === 6) {
                    setTimeout(() => {
                        feedback.innerHTML = 'üéâ Perfect! You matched all verbs correctly!';
                    }, 500);
                }
                
                selectedVerbC6 = null;
                selectedTransC6 = null;
            } else {
                feedback.innerHTML = '‚ùå Not a match. Try again!';
                feedback.style.color = '#d32f2f';
                
                setTimeout(() => {
                    document.querySelectorAll('.match-verb-btn-c6').forEach(btn => btn.classList.remove('selected'));
                    document.querySelectorAll('.match-trans-btn-c6').forEach(btn => btn.classList.remove('selected'));
                    selectedVerbC6 = null;
                    selectedTransC6 = null;
                    feedback.innerHTML = '';
                }, 1500);
            }
        }

        function resetVerbMatchingC6() {
            document.querySelectorAll('.match-verb-btn-c6, .match-trans-btn-c6').forEach(btn => {
                btn.classList.remove('matched', 'selected');
            });
            selectedVerbC6 = null;
            selectedTransC6 = null;
            matchedPairsC6 = 0;
            document.getElementById('verb-match-feedback-c6').innerHTML = '';
        }

        // Request exercise
        const requestAnswers = {
            1: 'a',  // Ji kerema xwe, bide min qelem
            2: 'b',  // Ji kerema xwe, bide min defter
            3: 'c'   // Ji kerema xwe, bide min paqij
        };
        
        let requestCorrect = 0;
        let requestAnswered = [false, false, false];

        function checkRequest(scenario, answer) {
            if (requestAnswered[scenario - 1]) return;
            
            const feedback = document.getElementById(`request-feedback-${scenario}`);
            const buttons = document.querySelectorAll(`[data-scenario="${scenario}"]`);
            
            requestAnswered[scenario - 1] = true;
            
            buttons.forEach(btn => btn.disabled = true);
            
            if (answer === requestAnswers[scenario]) {
                requestCorrect++;
                const selectedBtn = document.querySelector(`[data-scenario="${scenario}"][data-answer="${answer}"]`);
                selectedBtn.classList.add('correct');
                feedback.innerHTML = '‚úÖ Correct! Very polite!';
                feedback.style.color = '#2e7d32';
            } else {
                const selectedBtn = document.querySelector(`[data-scenario="${scenario}"][data-answer="${answer}"]`);
                selectedBtn.classList.add('wrong');
                const correctBtn = document.querySelector(`[data-scenario="${scenario}"][data-answer="${requestAnswers[scenario]}"]`);
                correctBtn.classList.add('correct');
                
