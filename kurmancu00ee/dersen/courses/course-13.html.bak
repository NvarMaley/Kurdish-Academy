        const vocabPairsC13 = {
            'nan': 'bread',
            'pen√Ær': 'cheese',
            'go≈üt': 'meat',
            'm√Æri≈ük': 'chicken',
            'mas√Æ': 'fish',
            'birinc': 'rice',
            '≈üorbe': 'soup',
            'sebze': 'vegetable',
            'f√™k√Æ': 'fruit',
            's√Æv': 'apple',
            'av': 'water',
            '√ßay': 'tea',
            'qehwe': 'coffee',
            '≈ü√Ær': 'milk',
            'xwe≈ü': 'delicious',
            'bir√ß√Æ': 'hungry',
            't√Æn√Æ': 'thirsty',
            'dixwim': 'eat',
            'vedixwim': 'drink',
            'dixwazim': 'want'
        };
        let selectedWordC13 = null;
        let selectedTransC13 = null;
        let matchedPairsC13 = 0;

        function selectWordC13(word) {
            if (document.querySelector(`[data-word="${word}"]`).classList.contains('matched')) return;
            document.querySelectorAll('.match-btn-c13').forEach(btn => {
                if (!btn.classList.contains('matched')) {
                    btn.style.background = 'white';
                }
            });
            document.querySelector(`[data-word="${word}"]`).style.background = '#fff9c4';
            selectedWordC13 = word;
            checkMatchC13();
        }

        function selectTransC13(trans) {
            if (document.querySelector(`[data-trans="${trans}"]`).classList.contains('matched')) return;
            document.querySelectorAll('.match-trans-c13').forEach(btn => {
                if (!btn.classList.contains('matched')) {
                    btn.style.background = 'white';
                }
            });
            document.querySelector(`[data-trans="${trans}"]`).style.background = '#fff9c4';
            selectedTransC13 = trans;
            checkMatchC13();
        }

        function checkMatchC13() {
            if (selectedWordC13 && selectedTransC13) {
                if (vocabPairsC13[selectedWordC13] === selectedTransC13) {
                    document.querySelector(`[data-word="${selectedWordC13}"]`).style.background = '#c8e6c9';
                    document.querySelector(`[data-trans="${selectedTransC13}"]`).style.background = '#c8e6c9';
                    document.querySelector(`[data-word="${selectedWordC13}"]`).classList.add('matched');
                    document.querySelector(`[data-trans="${selectedTransC13}"]`).classList.add('matched');
                    matchedPairsC13++;
                    if (matchedPairsC13 === 20) {
                        document.getElementById('vocab-match-feedback-c13').innerHTML = 'üéâ Perfect! All 20 pairs matched!';
                        document.getElementById('vocab-match-feedback-c13').style.color = '#2e7d32';
                    } else {
                        document.getElementById('vocab-match-feedback-c13').innerHTML = `‚úÖ ${matchedPairsC13} / 20 matched`;
                        document.getElementById('vocab-match-feedback-c13').style.color = '#ff9800';
                    }
                } else {
                    document.querySelector(`[data-word="${selectedWordC13}"]`).style.background = '#ffcdd2';
                    document.querySelector(`[data-trans="${selectedTransC13}"]`).style.background = '#ffcdd2';
                    setTimeout(() => {
                        document.querySelector(`[data-word="${selectedWordC13}"]`).style.background = 'white';
                        document.querySelector(`[data-trans="${selectedTransC13}"]`).style.background = 'white';
                    }, 1000);
                }
                selectedWordC13 = null;
                selectedTransC13 = null;
            }
        }

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function resetVocabC13() {
            selectedWordC13 = null;
            selectedTransC13 = null;
            matchedPairsC13 = 0;
            document.getElementById('vocab-match-feedback-c13').innerHTML = '';
            
            const wordsContainer = document.querySelector('.match-btn-c13').parentElement;
            const transContainer = document.querySelector('.match-trans-c13').parentElement;
            
            const wordButtons = Array.from(document.querySelectorAll('.match-btn-c13'));
            const transButtons = Array.from(document.querySelectorAll('.match-trans-c13'));
            
            wordButtons.forEach(btn => {
                btn.style.background = 'white';
                btn.classList.remove('matched');
            });
            transButtons.forEach(btn => {
                btn.style.background = 'white';
                btn.classList.remove('matched');
            });
            
            shuffleArray(wordButtons);
            shuffleArray(transButtons);
            
            wordsContainer.innerHTML = '';
            transContainer.innerHTML = '';
            
            wordButtons.forEach(btn => wordsContainer.appendChild(btn));
            transButtons.forEach(btn => transContainer.appendChild(btn));
        }
