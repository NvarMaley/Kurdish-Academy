    <script>
        // Emotions vocabulary data
        const emotionsVocabulary = [
            { english: "Happy", kurdish: "Dil≈üad" },
            { english: "Joyful", kurdish: "≈ûad" },
            { english: "Excited", kurdish: "Heyecan√Æ" },
            { english: "Proud", kurdish: "Serbilind" },
            { english: "Grateful", kurdish: "Spasdar" },
            { english: "Hopeful", kurdish: "H√™v√Ædar" },
            { english: "Loved", kurdish: "Hezhat√Æ" },
            { english: "Peaceful", kurdish: "A≈ü√Æt√Ædar" },
            { english: "Calm", kurdish: "Aram" },
            { english: "Relaxed", kurdish: "Xwe≈üewist√Æ" },
            { english: "Sad", kurdish: "Xemg√Æn" },
            { english: "Angry", kurdish: "Tirs" },
            { english: "Afraid", kurdish: "Tirsdar" },
            { english: "Anxious", kurdish: "Nixwes" },
            { english: "Worried", kurdish: "Tengdar" },
            { english: "Depressed", kurdish: "Depres√Æ" },
            { english: "Lonely", kurdish: "Ten√™" },
            { english: "Guilty", kurdish: "S√ªcdar" },
            { english: "Ashamed", kurdish: "≈ûermdar" },
            { english: "Jealous", kurdish: "R√™≈ü" },
            { english: "Tired", kurdish: "Westiyay√Æ" },
            { english: "Exhausted", kurdish: "Z√™de westiyay√Æ" },
            { english: "Stressed", kurdish: "Stresdar" },
            { english: "Confused", kurdish: "Tengb√Ær" },
            { english: "Lost", kurdish: "Winda" },
            { english: "Motivated", kurdish: "H√™rsdar" },
            { english: "Focused", kurdish: "Beral√Ækir√Æ" },
            { english: "Distracted", kurdish: "Diherik" },
            { english: "Curious", kurdish: "Balke≈ü" },
            { english: "Bored", kurdish: "Tengal√Æ" },
            { english: "Energetic", kurdish: "H√™rs" },
            { english: "Disappointed", kurdish: "Nexwe≈üb√ªn" },
            { english: "Satisfied", kurdish: "T√™xwaz" },
            { english: "Unsatisfied", kurdish: "N√™t√™xwaz" },
            { english: "Empathetic", kurdish: "Hisdar" },
            { english: "Resentful", kurdish: "Xw√Æn√Æ" },
            { english: "Detached", kurdish: "Nexwe≈ü" },
            { english: "Trusting", kurdish: "Bawer" },
            { english: "Suspicious", kurdish: "Gumanbar" },
            { english: "Love", kurdish: "Ev√Æn" },
            { english: "Hate", kurdish: "Nefret" },
            { english: "Fear", kurdish: "Tirs" },
            { english: "Surprise", kurdish: "Sersal" },
            { english: "Shame", kurdish: "≈ûerm" },
            { english: "Pity", kurdish: "Delal√Æ" },
            { english: "Envy", kurdish: "R√™≈ü" },
            { english: "Friendship", kurdish: "Hevalt√Æ" },
            { english: "Respect", kurdish: "R√™z" },
            { english: "Trust", kurdish: "Bawer√Æ" },
            { english: "Doubt", kurdish: "Guman" }
        ];

        let currentMode = 'table';
        let filteredVocabulary = [...emotionsVocabulary];
        
        // Flashcards variables
        let currentCardIndex = 0;
        let shuffledCards = [];
        let isFlipped = false;
        
        // Quiz variables
        let currentQuizIndex = 0;
        let shuffledQuiz = [];
        let quizScore = 0;
        let totalQuizQuestions = 0;
        let isAnswered = false;

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderTable();
            setupSearch();
            initializeFlashcards();
            initializeQuiz();
        });

        // Table View Functions
        function renderTable() {
            const container = document.getElementById('translationsContainer');
            container.innerHTML = '';
            
            filteredVocabulary.forEach(item => {
                const row = document.createElement('div');
                row.className = 'translation-row';
                row.innerHTML = `
                    <div class="english-cell">${item.english}</div>
                    <div class="kurdish-cell">${item.kurdish}</div>
                `;
                container.appendChild(row);
            });
        }

        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                filteredVocabulary = emotionsVocabulary.filter(item => 
                    item.english.toLowerCase().includes(searchTerm) || 
                    item.kurdish.toLowerCase().includes(searchTerm)
                );
                renderTable();
            });
        }

        // Mode switching
        function showMode(mode) {
            // Update active button
            document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Hide all modes
            document.getElementById('tableMode').style.display = 'none';
            document.getElementById('flashcardsMode').style.display = 'none';
            document.getElementById('quizMode').style.display = 'none';
            
            // Show selected mode
            currentMode = mode;
            if (mode === 'table') {
                document.getElementById('tableMode').style.display = 'block';
            } else if (mode === 'flashcards') {
                document.getElementById('flashcardsMode').style.display = 'block';
                resetFlashcardView();
            } else if (mode === 'quiz') {
                document.getElementById('quizMode').style.display = 'block';
                resetQuizView();
            }
        }

        // Flashcards Functions
        function initializeFlashcards() {
            shuffleArray(emotionsVocabulary);
            shuffledCards = [...emotionsVocabulary];
            currentCardIndex = 0;
            updateFlashcard();
        }

        function updateFlashcard() {
            if (currentCardIndex >= shuffledCards.length) {
                showFlashcardCompletion();
                return;
            }
            
            const card = shuffledCards[currentCardIndex];
            document.getElementById('frontText').textContent = card.english;
            document.getElementById('backText').textContent = card.kurdish;
            document.getElementById('cardCounter').textContent = `${currentCardIndex + 1} / ${shuffledCards.length}`;
            
            // Update navigation buttons
            document.getElementById('prevBtn').disabled = currentCardIndex === 0;
            document.getElementById('nextBtn').disabled = false;
            
            // Reset flip state
            document.getElementById('flashcard').classList.remove('flipped');
            isFlipped = false;
        }

        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
            isFlipped = !isFlipped;
        }

        function nextCard() {
            if (currentCardIndex < shuffledCards.length - 1) {
                currentCardIndex++;
                updateFlashcard();
            } else {
                showFlashcardCompletion();
            }
        }

        function previousCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateFlashcard();
            }
        }

        function showFlashcardCompletion() {
            document.getElementById('flashcard').style.display = 'none';
            document.getElementById('cardCounter').style.display = 'none';
            document.querySelector('.flashcard-controls').style.display = 'none';
            document.getElementById('completionMessage').style.display = 'block';
        }

        function restartFlashcards() {
            shuffleArray(emotionsVocabulary);
            shuffledCards = [...emotionsVocabulary];
            currentCardIndex = 0;
            resetFlashcardView();
        }

        function resetFlashcardView() {
            document.getElementById('flashcard').style.display = 'block';
            document.getElementById('cardCounter').style.display = 'block';
            document.querySelector('.flashcard-controls').style.display = 'flex';
            document.getElementById('completionMessage').style.display = 'none';
            updateFlashcard();
        }

        // Quiz Functions
        function initializeQuiz() {
            shuffleArray(emotionsVocabulary);
            shuffledQuiz = [...emotionsVocabulary];
            currentQuizIndex = 0;
            quizScore = 0;
            totalQuizQuestions = 0;
            updateQuizQuestion();
        }

        function updateQuizQuestion() {
            if (currentQuizIndex >= shuffledQuiz.length) {
                showQuizCompletion();
                return;
            }
            
            const question = shuffledQuiz[currentQuizIndex];
            document.getElementById('quizEnglishWord').textContent = question.english;
            document.getElementById('quizCounter').textContent = `${currentQuizIndex + 1} / ${shuffledQuiz.length}`;
            document.getElementById('quizScore').textContent = `Score: ${quizScore}/${totalQuizQuestions}`;
            
            // Update progress bar
            const progress = ((currentQuizIndex) / shuffledQuiz.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            
            // Reset input and feedback
            document.getElementById('quizInput').value = '';
            document.getElementById('quizInput').disabled = false;
            document.getElementById('submitBtn').disabled = false;
            document.getElementById('quizFeedback').style.display = 'none';
            isAnswered = false;
        }

        function checkAnswer() {
            if (isAnswered) return;
            
            const userAnswer = document.getElementById('quizInput').value.trim();
            const correctAnswer = shuffledQuiz[currentQuizIndex].kurdish;
            const isCorrect = userAnswer.toLowerCase() === correctAnswer.toLowerCase();
            
            totalQuizQuestions++;
            if (isCorrect) {
                quizScore++;
            }
            
            showQuizFeedback(isCorrect, correctAnswer);
            isAnswered = true;
            
            // Disable input and submit button
            document.getElementById('quizInput').disabled = true;
            document.getElementById('submitBtn').disabled = true;
        }

        function showQuizFeedback(isCorrect, correctAnswer) {
            const feedback = document.getElementById('quizFeedback');
            const feedbackIcon = document.getElementById('feedbackIcon');
            const feedbackText = document.getElementById('feedbackText');
            const correctAnswerDiv = document.getElementById('correctAnswer');
            
            feedback.style.display = 'block';
            feedback.className = `quiz-feedback ${isCorrect ? 'correct' : 'incorrect'}`;
            
            if (isCorrect) {
                feedbackIcon.textContent = '‚úÖ';
                feedbackText.textContent = 'Correct!';
                feedbackText.className = 'feedback-text correct';
                correctAnswerDiv.style.display = 'none';
            } else {
                feedbackIcon.textContent = '‚ùå';
                feedbackText.textContent = 'Incorrect';
                feedbackText.className = 'feedback-text incorrect';
                correctAnswerDiv.innerHTML = `Correct answer: <strong>${correctAnswer}</strong>`;
                correctAnswerDiv.style.display = 'block';
            }
        }

        function nextQuestion() {
            currentQuizIndex++;
            updateQuizQuestion();
        }

        function showQuizCompletion() {
            document.querySelector('.quiz-card').style.display = 'none';
            document.getElementById('quizCompletion').style.display = 'block';
            
            const percentage = Math.round((quizScore / totalQuizQuestions) * 100);
            document.getElementById('finalScore').textContent = `Your Score: ${quizScore}/${totalQuizQuestions} (${percentage}%)`;
            
            let message = '';
            if (percentage >= 90) {
                message = 'Outstanding! You have excellent knowledge of emotions vocabulary!';
            } else if (percentage >= 80) {
                message = 'Great job! You have a strong grasp of emotional terms!';
            } else if (percentage >= 70) {
                message = 'Good work! Keep practicing to improve further!';
            } else if (percentage >= 60) {
                message = 'Not bad! Review the vocabulary and try again!';
            } else {
                message = 'Keep studying! Practice makes perfect!';
            }
            
            document.getElementById('scoreMessage').textContent = message;
        }

        function restartQuiz() {
            shuffleArray(emotionsVocabulary);
            shuffledQuiz = [...emotionsVocabulary];
            currentQuizIndex = 0;
            quizScore = 0;
            totalQuizQuestions = 0;
            resetQuizView();
        }

        function resetQuizView() {
            document.querySelector('.quiz-card').style.display = 'block';
            document.getElementById('quizCompletion').style.display = 'none';
            updateQuizQuestion();
        }

        // Utility function to shuffle array
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        // Add Enter key support for quiz input
        document.addEventListener('DOMContentLoaded', function() {
            const quizInput = document.getElementById('quizInput');
            if (quizInput) {
                quizInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && !isAnswered) {
                        checkAnswer();
                    }
                });
            }
        });

        // Initialize navigation
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof initializeNavigation === 'function') {
                initializeNavigation();
            }
        });
    </script>
</body>
</html>
