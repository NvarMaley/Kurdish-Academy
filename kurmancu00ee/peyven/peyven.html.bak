            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
        }
        
        .vocabulary-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }
        
        .vocabulary-image {
            width: 120px;
            height: 120px;
            margin: 0 auto;
            border-radius: 12px;
            background-color: #f9f9f9;
            display: flex;
            align-items: center;
            justify-content: center;
